<!DOCTYPE html>
<html lang="en_US">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{{title}}</title>
</head>
<body>
    {{>navbar}}

    <!-- Introduction Section -->
    <section class="bg-light py-5">
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center">
                    <h2>Welcome to Our Recipe Website</h2>
                    <p>Discover delicious recipes and cooking inspiration.</p>
                </div>
            </div>
        </div>
    </section>

    <hr class="container my-4">

    <!-- Search Bar Section -->
    <section class="py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-6 mx-auto">
                    <form action="" method="get">
                        <div class="input-group">
                            <input type="text" class="form-control" name="q" placeholder="Search for recipes...">
                            <button class="btn btn-primary" type="submit">Search</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <hr class="container my-4">

    <div class="container content">
        <h1 class="mb-3">Recipes</h1>
        <div class="row row-cols-1 row-cols-md-4 g-4" id="recipe-container">
            {{#recipes}}
            <div class="col">
                <div class="card recipe-card">
                    <img src="{{image}}" class="card-img-top" alt="{{name}} Image">
                    <div class="card-body">
                        <h5 class="card-title">{{name}}</h5>
                        <a href="/recipe/{{id}}" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
            {{/recipes}}
            {{^recipes}}
                <p>No recipes available at the moment.</p>
            {{/recipes}}
        </div>

        <hr class="my-4">

        <h1 class="mb-3">Categories</h1>
        {{>categoriesPreview}}

        <hr class="my-4">

        <h1 class="mb-3">Areas</h1>
        {{>areas}}
    </div>
{{>toast}}
    {{>footer}}
</body>
</html>
